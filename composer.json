{
  "name": "contributte/guzzlette",
  "description": "Guzzle integration into Nette Framework",
  "keywords": [
    "nette",
    "guzzle"
  ],
  "type": "library",
  "license": "MIT",
  "homepage": "https://github.com/contributte/guzzlette",
  "authors": [
    {
      "name": "Martin Macho",
      "email": "matyxcz@gmail.com"
    },
    {
      "name": "Marek BartoÅ¡",
      "email": "bartos.developer152@gmail.com"
    }
  ],
  "require": {
    "php": ">=7.1.0",
    "guzzlehttp/guzzle": "^6.3.3",
    "namshi/cuzzle": "^2.0.3",
    "nette/di": "~2.4.13 | ^3.0",
    "nette/utils": "~2.5.2 | ^3.0",
    "tracy/tracy": "~2.4.16|~2.5.1|~2.6.0"
  },
  "require-dev": {
    "ninjify/qa": "^0.8.0",
    "ninjify/nunjuck": "^0.2.0",
    "mockery/mockery": "^0.9.9"
  },
  "autoload": {
    "psr-4": {
      "Contributte\\Guzzlette\\": "src"
    }
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "scripts": {
    "qa": [
      "linter src tests",
      "codesniffer src tests"
    ],
    "tests": [
      "tester -s -p php --colors 1 -C tests/cases"
    ],
    "coverage": [
      "tester -s -p phpdbg --colors 1 -C --coverage ./coverage.xml --coverage-src ./src tests/cases"
    ],
    "phpstan-install": [
      "mkdir -p temp/phpstan",
      "composer require -d temp/phpstan phpstan/phpstan:^0.11",
      "composer require -d temp/phpstan phpstan/phpstan-deprecation-rules:^0.11",
      "composer require -d temp/phpstan phpstan/phpstan-nette:^0.11",
      "composer require -d temp/phpstan phpstan/phpstan-strict-rules:^0.11"
    ],
    "phpstan": [
      "temp/phpstan/vendor/bin/phpstan analyse -l max -c phpstan.neon src"
    ]
  },
  "extra": {
    "branch-alias": {
      "dev-master": "2.1.x-dev"
    }
  }
}
